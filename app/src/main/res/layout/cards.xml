<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:clipToPadding="false"
    >

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/cardPreviewHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        >

    <ImageView
        android:id="@+id/cardPreviewArticleImage"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/placeholder5"
        android:scaleType="centerCrop"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardViewForLogo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clipToPadding="false"
            app:cardCornerRadius="30dp"
            >

            <ImageView
                android:id="@+id/cardPreviewSiteLogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/placeholder_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/cardPreviewTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/cardViewForLogo"
            app:layout_constraintTop_toTopOf="parent"
            android:text="11:17 | Monday "
            android:textSize="10sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAlignment="center"
            android:fontFamily="@font/montserratextralight"
            android:background="@drawable/corner_with_black_bg"
            android:textColor="#fff"
            />
        <TextView
            android:layout_marginStart="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/cardPreviewAuthorTextView"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            app:layout_constraintLeft_toRightOf="@id/cardViewForLogo"
            app:layout_constraintTop_toBottomOf="@id/cardPreviewTimeTextView"
            android:text="Author Name Goes Here"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:fontFamily="@font/montserratextralight"
            android:background="@drawable/corner_with_black_bg"
            android:textColor="#fff"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/cardPreviewHeadlineTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="#000"
            android:background="@drawable/corner_with_15dp"
            android:fontFamily="@font/montserratregular"
            android:text="@string/placeholder_heading"
            app:layout_constraintTop_toBottomOf="@id/cardViewForLogo"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/cardPreviewSubtitleTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="#000"
            android:maxLines="3"
            android:ellipsize="end"
            android:background="@drawable/corner_with_15dp"
            android:fontFamily="@font/geosanslightoblique"
            android:text="@string/placeholder_heading"
            app:layout_constraintTop_toBottomOf="@id/cardPreviewHeadlineTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>